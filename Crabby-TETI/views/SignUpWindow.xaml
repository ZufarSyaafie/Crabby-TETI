<Window x:Class="CrabbyTETI.views.SignUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:CrabbyTETI.Converters"
        Title="Crabby-TETI - Sign Up" 
        Height="650" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None">

    <Window.Resources>
        <converters:BoolToStatusColorConverter x:Key="BoolToStatusColorConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Style untuk TextBox -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="CaretBrush" Value="#333"/>
            <Setter Property="SelectionBrush" Value="#FF6B35"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                CornerRadius="6"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                SnapsToDevicePixels="True"
                                Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          VerticalScrollBarVisibility="Hidden"
                                          HorizontalScrollBarVisibility="Hidden" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF6B35"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF6B35"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="1.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style untuk PasswordBox -->
        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="CaretBrush" Value="#333"/>
            <Setter Property="SelectionBrush" Value="#FF6B35"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border x:Name="border"
                                CornerRadius="8"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <Grid VerticalAlignment="Center">
                                <ScrollViewer x:Name="PART_ContentHost"
                                              Margin="{TemplateBinding Padding}"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Stretch"
                                              Focusable="False"
                                              Background="Transparent"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF6B35"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF6B35"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#F5F5F5"/>
                                <Setter Property="Foreground" Value="#999"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style untuk Sign Up Button -->
        <Style x:Key="SignUpButton" TargetType="Button">
            <Setter Property="Background" Value="#FF6B35"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E55A2B"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#CC4F26"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="White" CornerRadius="20">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="30" Opacity="0.3" ShadowDepth="0"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="1.2*"/>
            </Grid.ColumnDefinitions>

            <!-- Panel Kiri - Branding -->
            <Border Grid.Column="0" Background="#FF6B35" CornerRadius="20,0,0,20">
                <Grid>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="30">
                        <!-- Logo Kepiting -->
                        <Viewbox Width="120" Height="120" Margin="0,0,0,30">
                            <TextBlock Text="🦀" FontSize="100" TextAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
                        </Viewbox>

                        <TextBlock Text="Crabby-TETI" 
                                   FontSize="32" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,15"/>

                        <TextBlock Text="Bergabunglah dengan kami" 
                                   FontSize="16" 
                                   Foreground="White" 
                                   HorizontalAlignment="Center"
                                   Opacity="0.9"
                                   Margin="0,0,0,30"/>

                        <StackPanel Margin="0,20,0,0">
                            <TextBlock Foreground="White" FontSize="13" Opacity="0.85" TextWrapping="Wrap" TextAlignment="Center" Margin="0,0,0,8">
                                <Run Text="✓ Dashboard &amp; Monitoring Real-time"/>
                            </TextBlock>
                            <TextBlock Foreground="White" FontSize="13" Opacity="0.85" TextWrapping="Wrap" TextAlignment="Center" Margin="0,0,0,8">
                                <Run Text="✓ Analisis &amp; Pelaporan Bisnis"/>
                            </TextBlock>
                            <TextBlock Foreground="White" FontSize="13" Opacity="0.85" TextWrapping="Wrap" TextAlignment="Center">
                                <Run Text="✓ Manajemen Data &amp; Input"/>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Panel Kanan - Form Sign Up -->
            <Grid Grid.Column="1">
                <!-- Tombol Close -->
                <Button x:Name="btnClose"
                        Content="✕"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Width="40"
                        Height="40"
                        Margin="0,15,15,0"
                        FontSize="20"
                        FontWeight="Bold"
                        Background="Transparent"
                        Foreground="#999999"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="BtnClose_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="20">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F0F0F0"/>
                                    <Setter Property="Foreground" Value="#333333"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <StackPanel VerticalAlignment="Center" Margin="60,0">
                    <TextBlock Text="Buat Akun Baru" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Foreground="#333333"
                               Margin="0,0,0,8"/>

                    <TextBlock Text="Daftar untuk memulai kelola tambak Anda" 
                               FontSize="14" 
                               Foreground="#666666"
                               Margin="0,0,0,35"/>

                    <!-- Nama -->
                    <TextBlock Text="Nama" 
                               FontSize="13" 
                               Foreground="#666666" 
                               Margin="0,0,0,8"/>
                    <TextBox x:Name="txtName" 
                             Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,0,15"/>

                    <!-- Email -->
                    <TextBlock Text="Email (Unik)" 
                               FontSize="13" 
                               Foreground="#666666" 
                               Margin="0,0,0,8"/>
                    <TextBox x:Name="txtEmail" 
                             Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,0,15"/>

                    <!-- Password -->
                    <TextBlock Text="Password" 
                               FontSize="13" 
                               Foreground="#666666" 
                               Margin="0,0,0,8"/>
                    <PasswordBox x:Name="txtPassword" 
                                 Style="{StaticResource ModernPasswordBox}"
                                 Margin="0,0,0,15"/>

                    <!-- Confirm Password -->
                    <TextBlock Text="Konfirmasi Password" 
                               FontSize="13" 
                               Foreground="#666666" 
                               Margin="0,0,0,8"/>
                    <PasswordBox x:Name="txtConfirmPassword" 
                                 Style="{StaticResource ModernPasswordBox}"
                                 Margin="0,0,0,15"/>

                    <!-- Terms and Conditions -->
                    <CheckBox x:Name="chkTerms" 
                              IsChecked="{Binding AcceptTerms}"
                              Foreground="#666666"
                              FontSize="13"
                              Margin="0,0,0,20">
                        <TextBlock TextWrapping="Wrap">
                            <Run Text="Saya setuju dengan"/>
                            <Run Text=" "/>
                            <Hyperlink TextDecorations="None" Foreground="#FF6B35">
                                <Run Text="Syarat dan Ketentuan"/>
                            </Hyperlink>
                            <Run Text=" serta"/>
                            <Run Text=" "/>
                            <Hyperlink TextDecorations="None" Foreground="#FF6B35">
                                <Run Text="Kebijakan Privasi"/>
                            </Hyperlink>
                        </TextBlock>
                    </CheckBox>

                    <!-- Status Message -->
                    <TextBlock x:Name="txtStatus"
                               Text="{Binding StatusMessage}"
                               FontSize="12"
                               Foreground="{Binding IsStatusError, Converter={StaticResource BoolToStatusColorConverter}}"
                               Visibility="{Binding IsStatusVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="0,0,0,15"/>

                    <!-- Sign Up Button -->
                    <Button x:Name="btnSignUp"
                            Content="DAFTAR" 
                            Style="{StaticResource SignUpButton}"
                            Click="BtnSignUp_Click"
                            Margin="0,0,0,25"/>

                    <!-- Login Link -->
                    <TextBlock HorizontalAlignment="Center" Margin="0,0,0,20">
                        <Run Text="Sudah punya akun?" FontSize="13" Foreground="#666666"/>
                        <Run Text=" "/>
                        <Hyperlink x:Name="linkLogin" 
                                  Click="LinkLogin_Click"
                                  TextDecorations="None">
                            <Run Text="Login di sini" FontSize="13" Foreground="#FF6B35" FontWeight="SemiBold"/>
                        </Hyperlink>
                    </TextBlock>

                    <!-- Footer -->
                    <TextBlock HorizontalAlignment="Center" 
                               Margin="0,10,0,0">
                        <Run Text="© 2025 Crabby-TETI" FontSize="12" Foreground="#999999"/>
                    </TextBlock>
                    <TextBlock HorizontalAlignment="Center" 
                               Margin="0,0,0,0">
                        <Run Text="Sistem Pengelolaan Tambak Kepiting" FontSize="11" Foreground="#BBBBBB"/>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>